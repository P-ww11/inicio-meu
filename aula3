var readline = require('readline-sync')
var nome = readline.question("qual e seu nome? ") //isso e meio que para fazer perguntas pro usuario tipo o input do python
console.log ("o nome informado foi " + nome)
var numero = readline.questionFloat( "me diga um numero")
var n2 = readline.questionFloat ("me diga outro numero")// esse float e meio que uma questao em numeros pois o question normal e um string
var resultado = n2 + numero
console.log (resultado)   //nao da pra rodar no output que e a saida entao precisa ser rodado no terminal com o codigo:  node (o arquivo que voce esta)
