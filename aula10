//console.log(c)
 // vamos criar uma tabuada agr de algum numero
var readline = require("readline-sync")
var insira = readline.questionInt("insira um valor ")
for(let c = 1; c <= 10; c++){                   //o c foi definido para ser maior ou igual a 10 como uma tabuada
    var tabuada = insira * c                   //criando uma tabuada que o c vai aumentando e multiplica pelo numero que o usuario inserir e mostrando a baixo
    console.log(insira +"x"+ c +"="+ tabuada)  //aqui ele mostrou o valor que o usuario quis separou com o string "x" e dps o contador e criou outro string "=" e colocou o resultado do c e o valor do usuario
}
    
